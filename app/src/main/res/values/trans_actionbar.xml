<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransAction" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <color name="transparent_black">#801654f2</color>
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/transparent_black</item>
        <!--For compatibility-->
        <item name="background">@color/transparent_black</item>
    </style>
</resources>